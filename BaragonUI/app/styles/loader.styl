@import colors
@import nib

.page-loader
    height 2em
    width 2em
    border-radius 100%
    border .25em solid transparent
    border-top-color $lighterGrey
    border-right-color $lighterGrey
    z-index 300
    backface-visibility hidden
    animation spinner 700ms linear infinite

    &.small
        border-width 1px
        height 1em
        width 1em

    &.fixed
        position fixed
        margin auto
        top 0
        left 0
        bottom 0
        right 0

    &.centered
        margin 0 auto

        &.cushy
            margin-top 3em
            margin-bottom 3em

@keyframes spinner
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)